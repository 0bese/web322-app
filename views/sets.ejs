<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="icon" href="/lego-man.png" type="image/png" sizes="16x16" />
    <title>Set Collection</title>
  </head>
  <body data-theme="cupcake">
    <!-- NavBar -->
    <%- include('partials/navbar', {page: '/lego/sets'}) %>

    <!-- Main -->
    <div class="container flex justify-center mx-auto">
      <div class="overflow-x-auto max-w-7xl">
        <table class="table">
          <!-- head -->
          <thead>
            <tr>
              <th>Name</th>
              <th>Theme</th>
              <th>Year</th>
              <th>Num_parts</th>
            </tr>
          </thead>
          <tbody>
            <!-- row 1 -->
            <% legoSet.map(set =>{ %>
            <tr>
              <td>
                <div class="flex items-center gap-3">
                  <div class="avatar">
                    <div class="h-56 w-56 rounded-md">
                      <img src="<%= set.img_url %>" alt="set" />
                    </div>
                  </div>
                  <div>
                    <div class="font-bold sm:w-40"><%= set.name %></div>
                  </div>
                </div>
              </td>
              <td>
                <a
                  class="btn btn-active btn-neutral"
                  href="/lego/sets?theme=<%= set.theme %>"
                  ><%= set.theme %></a
                >
                <br />
                <!-- <span class="badge badge-ghost badge-sm">
              
                </span> -->
              </td>
              <td><%= set.year %></td>
              <td><%= set.num_parts %></td>
              <th>
                <a class="btn btn-outline" href="/lego/sets/<%= set.set_num %>"
                  >Details</a
                >
              </th>
            </tr>
            <%}) %>

            <!-- foot -->
          </tbody>

          <tfoot>
            <tr>
              <th>Name</th>
              <th>Theme</th>
              <th>Year</th>
              <th>Num_parts</th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
    <!-- Footer -->
    <%- include('partials/footer', {page: '/lego/sets'}) %>
    <script>
      function toggleTheme() {
        const body = document.body;
        const currentTheme = body.getAttribute("data-theme");
        const newTheme = currentTheme === "cupcake" ? "night" : "cupcake";
        body.setAttribute("data-theme", newTheme);
        localStorage.setItem("theme", newTheme);
      }
      function setInitialTheme() {
        const savedTheme = localStorage.getItem("theme");
        document.body.setAttribute("data-theme", savedTheme || "cupcake");
      }
      document.addEventListener("DOMContentLoaded", setInitialTheme);
    </script>
  </body>
</html>
