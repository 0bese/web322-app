{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "data/**"
                ]
            }
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/public/(.*)",
            "dest": "/public/$1",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/server.js"
        }
    ]
}